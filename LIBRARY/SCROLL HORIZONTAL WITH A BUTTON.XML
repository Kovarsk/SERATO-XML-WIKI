<!-- Scroll library horizontal  (library_scroll_horizontal) 

            static_value =  "left"    alias value "left"  = 127
                            "right"   alias value "right" = 127 -->


    <control channel="xx" event_type="Note On" control="xx">

        <userio event="click">

            <library_scroll_horizontal deck_set="Default" deck_id="0" slot_id="0">

                <translation action_on="press" behaviour="static" static_value="left"/>

            </library_scroll_horizontal>

        </userio>

        <userio event="output">

            <library_scroll_horizontal deck_set="Default" deck_id="0" slot_id="0">

                <translation action_on="any">

                    <alias name="off" value="0"/>
                    <alias name="left" value="127"/>
                    <alias name="right" value="0"/>

                </translation>

            </library_scroll_horizontal>

        </userio>
    </control>
