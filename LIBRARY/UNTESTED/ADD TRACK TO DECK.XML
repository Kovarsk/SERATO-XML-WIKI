<!-- load track to deck  (load_track) (load_track_feedback)

            deck_id =   0 [Deck 1];
                        1 [Deck 2]:
                        2 [Deck 3];
                        3 [Deck 4] -->


    <control channel="xx" event_type="Note On" control="xx">

        <userio event="click">

            <load_track deck_set="Default" deck_id="1" slot_id="0">

                <translation action_on="press" behaviour="explicit"/>

            </load_track>
        </userio>

        <userio event="output">

            <load_track_feedback deck_set="Default" deck_id="1" slot_id="0">

                <translation action_on="any">

                    <alias name="off" value="0"/>

                    <alias name="on" value="127"/>

                </translation>
            </load_track_feedback>

            <load_track_feedback deck_set="Default" deck_id="1" slot_id="0">

                <translation action_on="any">

                    <alias name="off" value="0"/>

                    <alias name="on" value="127"/>

                </translation>
            </load_track_feedback>

            <load_track_feedback deck_set="Default" deck_id="1" slot_id="0">

                <translation action_on="any">

                        <alias name="off" value="0"/>

                        <alias name="on" value="127"/>

                </translation>
            </load_track_feedback>

        </userio>
    </control>
